{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        "storybook-static/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "pre-publish": {
      "dependsOn": [
        "^build",
        "^lint",
        "^test",
        "^pre-publish"
      ]
    },
    "test": {
      "cache": false
    },
    "publish": {
      "dependsOn": [
        "^build",
        "^lint",
        "^test",
        "^publish"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
